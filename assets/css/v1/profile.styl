#qz-profile
    background-color: #F5F5F5
    .qz-header
        min-height: 240px
        max-height: 240px
        background-color: #5ae2b3
        background: url('../bkg.png') repeat-x center
        .qz-avatar
            width: 108px 
            height: 108px
            background-color: #3DB0AD;
            border-radius: 5px; 
            margin-top: 50px
            display: flex
            .v-image
                background: #000
                flex: 0 0 auto
        .qz-username
            display: flex
            margin-top: 20px
            font-size: 24px;
            color: #FFFFFF;
            span 
                margin-left: -10px
    .qz-content
        padding-top: 38px
    .qz-profile-card
        width: 480px
        min-height: 96px
        background: #FFFFFF;
        margin-bottom: 16px
        &.qz-active
            box-shadow: 0 0 6px 0 rgba(87,87,87,0.50);
    .qz-profile-card-preview
        height: 96px
    .qz-profile-card-header
        max-width: 96px
        min-width: 96px
        height: 100%
        background: #FBFBFB;
        border-right: 1px solid #E9E9E9;
        .v-icon 
            margin-top: 16px
        i, div 
            width: 100%
        div 
            margin-top: 8px
            text-align: center
            font-size: 18px;
            color: #5A5A5A;
    .qz-profile-card-content
        padding-left: 33px
        font-size: 18px;
        color: #5A5A5A;
        .qz-space
            max-width: 160px 
            min-width: 160px
        .qz-space-text
            margin-left: 17px
        .v-progress-linear
            width: 160px
            height: 8px
            border-radius: 100px;
    .qz-profile-card-action
        max-width: 110px
        min-width: 110px
        padding: 12px
        .v-btn
            margin: 0
            padding: 0 8px;
            min-width: 80px
            .v-btn__content
                font-size: 18px;
    
    .qz-profile-card-editor
        padding: 15px
        border-top: 1px solid #E9E9E9;
        .qz-profile-control
            margin-bottom: 16px

    .qz-profile-label
        max-width: 60px
        min-width: 60px   
        text-align: right
        font-size: 14px;
        color: #5A5A5A;
        margin-right: 16px
    .qz-profile-input
        max-width: 200px
        min-width: 200px
        .v-input__slot
            min-height: 0
            border: 1px solid #BFBFBF;
            border-radius: 5px;
            &:focus-within
                border: 1px solid #2EC17C;
                box-shadow: 0 0 4px 0 #1DAC69;
            input 
                margin-top: 3px
        .v-input__control
            padding: 0
    .qz-profile-card-editor-action
        .v-btn
            margin: 0
            min-width: 36px
            .v-btn__content
                font-size: 18px;